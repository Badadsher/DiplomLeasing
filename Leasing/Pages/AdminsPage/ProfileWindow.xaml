<Window x:Class="Leasing.Pages.AdminsPage.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Leasing.Pages.AdminsPage"
                 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        mc:Ignorable="d"
        Title="ProfileWindow" IsEnabled="True" Height="307" Width="595" Loaded="Window_Loaded" ResizeMode="NoResize"  AllowsTransparency="True" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Transparent">
    <Grid>
        <materialDesign:Card Margin="10" UniformCornerRadius="20">
            <Grid Margin="0,0,0,-21">
                <Button Style="{StaticResource MaterialDesignFloatingActionButton}" 
                    HorizontalAlignment="Left" 
                    BorderBrush="{x:Null}" 
                    Background="{x:Null}" 
                    Foreground="Black" 
                    x:Name="CloseButton" 
                    Margin="509,8,0,244" 
                    Cursor="Hand" 
                    Click="ExitClick">
                    <materialDesign:PackIcon Kind="Close" Foreground="Black" Height="39" Width="39" VerticalAlignment="Center"/>
                </Button>
                <!-- Изображение с фиксированной шириной и высотой -->
                <Grid HorizontalAlignment="Left" Margin="38,81,0,0" VerticalAlignment="Top">
                    <Image x:Name="myImage" Width="200" Height="150" Stretch="UniformToFill" />
                </Grid>
                <Label x:Name="nameLabel" Content="Имя" HorizontalAlignment="Left" Margin="262,64,0,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="18" FontFamily="Arial Black" Height="47" Width="303"/>
                <Label x:Name="surnameLabel" Content="Фамилия" HorizontalAlignment="Left" Margin="262,111,0,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="18" FontFamily="Arial Black" Height="47" Width="303"/>
                <Label x:Name="patronymicLabel" Content="Отчество" HorizontalAlignment="Left" Margin="262,162,0,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="18" FontFamily="Arial Black" Height="47" Width="303"/>
                <Label x:Name="numberLabel" Content="Номер" HorizontalAlignment="Left" Margin="262,210,0,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="18" FontFamily="Arial Black" Height="47" Width="303"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
