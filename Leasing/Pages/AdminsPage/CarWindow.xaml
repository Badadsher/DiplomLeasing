<Window x:Class="Leasing.Pages.AdminsPage.CarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Leasing.Pages.AdminsPage"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        mc:Ignorable="d"
        Title="CarWindow" Loaded="Window_Loaded" IsEnabled="True" Height="357" Width="695" ResizeMode="NoResize"  AllowsTransparency="True" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Transparent">
    <Grid>
        <materialDesign:Card Margin="10" UniformCornerRadius="20">
            <Grid Margin="0,0,0,-21">
                <Button Style="{StaticResource MaterialDesignFloatingActionButton}" 
                   HorizontalAlignment="Left" 
                   BorderBrush="{x:Null}" 
                   Background="{x:Null}" 
                   Foreground="Black" 
                   x:Name="CloseButton" 
                   Margin="612,6,0,296" 
                   Cursor="Hand" 
                   Click="ExitClick">
                    <materialDesign:PackIcon Kind="Close" Foreground="Black" Height="39" Width="39"/>
                </Button>
                <!-- Изображение с фиксированной шириной и высотой -->
                <Grid HorizontalAlignment="Left" Margin="38,81,0,0" VerticalAlignment="Top">
                    <Image x:Name="myImage" Width="250" Height="200" Stretch="UniformToFill" />
                </Grid>
                <Label x:Name="nameLabel" Content="Название:" HorizontalAlignment="Left" Margin="318,80,0,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="18" FontFamily="Arial Black" Height="47" Width="116"/>
                <Label x:Name="statusLabel" Content="Статус:" HorizontalAlignment="Left" Margin="318,107,0,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="18" FontFamily="Arial Black" Height="47" Width="250"/>
                <Label x:Name="priceLabel" Content="Цена:" HorizontalAlignment="Left" Margin="318,134,0,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="18" FontFamily="Arial Black" Height="48" Width="250"/>
                <Label x:Name="tarifLabel" Content="Тариф:" HorizontalAlignment="Left" Margin="318,163,0,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="18" FontFamily="Arial Black" Height="47" Width="250"/>
                <Label x:Name="countLabel" Content="Срок:" HorizontalAlignment="Left" Margin="318,190,0,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="18" FontFamily="Arial Black" Height="47" Width="250"/>
                <Label x:Name="avanceLabel" Content="Аванс:" HorizontalAlignment="Left" Margin="318,216,0,0" VerticalAlignment="Top" Foreground="#E5000000" FontSize="18" FontFamily="Arial Black" Height="52" Width="250"/>
                <Label x:Name="nameBox" Content="Название" HorizontalAlignment="Left" Margin="428,81,0,0" VerticalAlignment="Top" Foreground="#E5888888" FontSize="18" FontFamily="Bahnschrift SemiBold" Height="47" Width="184"/>
                <Label x:Name="statusBox" Content="Название" HorizontalAlignment="Left" Margin="394,108,0,0" VerticalAlignment="Top" Foreground="#E5888888" FontSize="18" FontFamily="Bahnschrift SemiBold" Height="47" Width="218"/>
                <Label x:Name="priceBox" Content="Название" HorizontalAlignment="Left" Margin="380,136,0,0" VerticalAlignment="Top" Foreground="#E5888888" FontSize="18" FontFamily="Bahnschrift SemiBold" Height="47" Width="232"/>
                <Label x:Name="tarifBox" Content="Название" HorizontalAlignment="Left" Margin="394,164,0,0" VerticalAlignment="Top" Foreground="#E5888888" FontSize="18" FontFamily="Bahnschrift SemiBold" Height="47" Width="220"/>
                <Label x:Name="countBox" Content="Название" HorizontalAlignment="Left" Margin="378,191,0,0" VerticalAlignment="Top" Foreground="#E5888888" FontSize="18" FontFamily="Bahnschrift SemiBold" Height="47" Width="232"/>
                <Label x:Name="avanceBox" Content="Название" HorizontalAlignment="Left" Margin="388,218,0,0" VerticalAlignment="Top" Foreground="#E5888888" FontSize="18" FontFamily="Bahnschrift SemiBold" Height="48" Width="226"/>

            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
